<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<ImageView-->
        <!--android:id="@+id/pk_win_me"-->
        <!--android:layout_width="@dimen/_100dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:src="@drawable/pk_win"-->
        <!--android:layout_centerHorizontal="true"/>-->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pk_result"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pk_result_fail"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/pk_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:text="击败不等于击倒，跌倒了，爬起来！"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_mission"
            android:layout_width="@dimen/_150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="去做任务"
            android:background="@drawable/pk_background"
            android:layout_marginTop="@dimen/_50dp"/>
        <ImageView
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cancel"
            android:layout_marginTop="@dimen/_50dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>




</RelativeLayout>